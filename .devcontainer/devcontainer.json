{
  "name": "My Codespace",
  "image": "mcr.microsoft.com/devcontainers/universal:3",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "extensions.allowed": { "*": false },
        "extensions.allowed.ms-python": true,
        "extensions.allowed.esbenp": true
      }
    }
  },
  "forwardPorts": [3000, 8000],
  "postCreateCommand": "bash .devcontainer/scripts/bootstrap.sh",
  "updateContentCommand": "git pull --rebase",
  "initializeCommand": "echo \"Initializing codespaceâ€¦\""
}
